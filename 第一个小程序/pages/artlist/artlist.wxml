<!--pages/artlist/artlist.wxml-->
<view>
  <block wx:for="{{artData}}" wx:key="*this">
    <view class="" bindtap="todetail" data-id="{{item.id}}">
      <text>
        {{item.title}}
      </text>
      <text>
        {{item.content}}
      </text>
      <block wx:for="{{item.roating}}" wx:key="*this">
        <image class="star" wx:if="{{item==1}}" src="../../images/star1.png"></image>
        <image class="star1" wx:else src="../../images/star2.png"></image>
      </block>
    </view>
  </block>
</view>